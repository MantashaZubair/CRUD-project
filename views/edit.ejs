<%- include ('./partials/header.ejs') %>
       <div class ="container">
        <div class ="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center" role ="alert">Update Student</h2>
                <form method="post" action="/student/update/<%= data._id%>">
                  
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value= "<%= data.name %>"/>
                        </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" value="<%=data.age%>"/>
                        </div>
                        <div class="mb-3">
                            <label for="fees" class="form-label">Fee</label>
                            <input type="text" class="form-control" id="fees" name="fees" value="<%=data.fees%>"/>
                            </div>
                            <input class="btn btn-warning" type="submit" value="update">
                            <input class="btn btn-secondary" type="submit" value="back to home">

                </form>
            </div>
          
        </div>
       </div>
  <%-include ('./partials/footer.ejs') %>