<%- include ('./partials/header.ejs') %>
       <div class ="container">
        <div class ="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center" role ="alert">Add New Student</h2>
                <form method="post">
                  
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name"  />
                        </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" />
                        </div>
                        <div class="mb-3">
                            <label for="fees" class="form-label">Fee</label>
                            <input type="text" class="form-control" id="fees" name="fees" />
                            </div>
                            <input class="btn btn-primary" type="submit" value="Submit">

                </form>
            </div>
          
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center" role ="alert">List of Student</h2>
              
                <table class="table table-striped table-hover">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%var i=1%>
                            <% data.forEach((item)=>{ %>
                                <tr>
                                    <td><%= i++%></td>
                                    <td><%=item.name%></td>
                                    <td><%=item.age%></td>
                                    <td><%=item.fees%></td>
                                    <td>
                                        <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                            <button type="submit" class ="btn">
                                                <i class="fas fa-pen-square text-info"></i>
                                            </button>
                                        </form>
                                      <form action="/student/delete/<%= item._id%>" method="post" class="d-inline">
                                        <button type="submit"  class ="btn">
                                            <i class="fa-regular fa-trash-can text-danger"></i>
                                        </button>
                                       
                                      </form>
                                      
                                    </td>
                                  </tr>
                                <%})%>
                          
                            
                        
                      
                  </table>
              </div>
        </div>
       </div>
  <%-include ('./partials/footer.ejs') %>